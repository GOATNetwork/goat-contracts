{
  "name": "goat-contracts",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "hardhat": "^2.22.5",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^5.0.2"
  },
  "dependencies": {
    "@keep-network/bitcoin-spv-sol": "^3.4.0-solc-0.8",
    "@openzeppelin/contracts": "^5.0.2"
  },
  "scripts": {
    "lint": "prettier --plugin=prettier-plugin-solidity --check test 'contracts/**/*.sol' && solhint 'contracts/**/*.sol'",
    "lint:fix": "prettier --plugin=prettier-plugin-solidity --write test 'contracts/**/*.sol'",
    "compile": "hardhat compile",
    "build": "hardhat compile",
    "test": "hardhat test"
  },
  "prettier": {
    "trailingComma": "all"
  }
}
