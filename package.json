{
  "name": "goat-contracts",
  "license": "Business Source License 1.1",
  "author": "Goat Foundation",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomiclabs/hardhat-solhint": "^4.0.1",
    "hardhat": "^2.22.12",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.4.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2"
  },
  "scripts": {
    "fmt": "prettier --check test task common contracts",
    "fmt:fix": "prettier --write test task common contracts",
    "lint": "hardhat check",
    "compile": "hardhat compile",
    "build": "hardhat compile",
    "test": "hardhat test",
    "pregenesis": "hardhat compile && docker compose up -d --wait",
    "genesis": "hardhat create:genesis --network genesis --force true",
    "postgenesis": "docker compose down"
  },
  "prettier": {
    "trailingComma": "all",
    "plugins": [
      "prettier-plugin-solidity"
    ]
  }
}
